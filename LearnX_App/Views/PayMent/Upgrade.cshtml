@using LearnX_ModelView.Catalog.PayMent
@model CreatePaymentRequest
@{
    ViewData["Title"] = "Nâng cấp tài khoản";
}
<!-- Use your provided HTML structure; here I provide simplified integration -->
<div class="page-container">
    <header class="page-header">
        <div class="header-icon"><i class="fas fa-crown"></i></div>
        <h1 class="page-title">Nâng Cấp Tài Khoản Premium</h1>
        <p class="page-subtitle">Mở khóa tất cả tính năng cao cấp</p>
    </header>

    <div>
        <form asp-action="CreateUpgrade" method="post">
            <input type="hidden" name="IdempotencyKey" value="@Guid.NewGuid().ToString()" />
            <div>
                <label>Gói</label>
                <select name="PackageCode" class="form-control">
                    <option value="premium_month">Premium - 1 tháng</option>
                    <option value="premium_year">Premium - 1 năm</option>
                    <option value="premium_lifetime">Premium trọn đời</option>
                </select>
            </div>
            <div>
                <label>Số tiền (VND)</label>
                <input type="number" asp-for="Amount" name="Amount" class="form-control" value="10000" required />
            </div>
            <br/>
            <button class="select-plan-btn" type="submit">Thanh toán & Nâng cấp</button>
        </form>
    </div>
</div>

<!-- Include modal and QR rendering target inside same view or separate view UpgradeQr -->