<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LearnX_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LearnX_App.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>
<style>
    .icon {
        color: #89d3d3;
        font-size: 50px;
    }

    .text-center {
        color: #3fa0a0;
        font-size: 50px;
    }

    nav {
        background-color: #FEF9EF;
    }

    .navbar-nav .nav-item.active .nav-link {
        border-bottom: 2px solid #007bff;
        /* Màu gạch chân */
        padding-bottom: 0.5rem;
        /* Khoảng cách giữa văn bản và gạch chân */
    }
</style>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow ">
            <div class="container">
                <div class="row d-flex flex-nowrap">
                    <div class="col-4 d-flex ">
                        <img src="/img/Evening classes.png" alt="" height="100px">
                        <h2 class="mg-2 icon d-flex justify-content-center align-items-center">LearX</h2>
                    </div>
                    <div class="clo-4 text-center">

                        <h2 class=" h-100 d-flex justify-content-center align-items-center"
                            style="font-size: 50px; padding-bottom: 10px;">Learn from the best</h2>
                    </div>
                </div>
            </div>

        </nav>
        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar bg-white border-bottom shadow-sm">
                <div class="container d-flex justify-content-center">
                    <ul class="navbar-nav d-flex flex-row justify-content-center align-items-center">
                        <li class="nav-item mx-3 @(ViewData["ActivePage"] as string == "Index" ? "active" : "")">
                            <a class="nav-link text-dark d-flex flex-column align-items-center" asp-area=""
                                asp-controller="Course" asp-action="Index">
                                <i class="bi bi-folder2" style="font-size: 24px;"></i>
                                <span>Khóa học</span>
                            </a>
                        </li>
                        <li class="nav-item mx-3 @(ViewData["ActivePage"] as string == "AllExercise" ? "active" : "")">
                            <a class="nav-link text-dark d-flex flex-column align-items-center" asp-area=""
                                asp-controller="Exercise" asp-action="Index">
                                <i class="bi bi-clipboard" style="font-size: 24px;"></i>
                                <span>Bài tập</span>
                            </a>
                        </li>
                        <li class="nav-item mx-3 @(ViewData["ActivePage"] as string == "Ebook" ? "active" : "")">
                            <a class="nav-link text-dark d-flex flex-column align-items-center" asp-area=""
                                asp-controller="Ebook" asp-action="Index">
                                <i class="bi bi-book" style="font-size: 24px;"></i>
                                <span>Sách điện tử</span>
                            </a>
                        </li>
                        <li class="nav-item mx-3 @(ViewData["ActivePage"] as string == "Test" ? "active" : "")">
                            <a class="nav-link text-dark d-flex flex-column align-items-center" asp-area=""
                                asp-controller="Test" asp-action="Index">
                                <i class="bi bi-calculator" style="font-size: 24px;"></i>
                                <span>Bài kiểm tra</span>
                            </a>
                        </li>
                        <li class="nav-item mx-3 @(ViewData["ActivePage"] as string == "Scores" ? "active" : "")">
                            <a class="nav-link text-dark d-flex flex-column align-items-center" asp-area=""
                                asp-controller="Scores" asp-action="Index">
                                <i class="bi bi-star" style="font-size: 24px;"></i>
                                <span>Sổ điểm</span>
                            </a>
                        </li>
                        <li class="nav-item mx-3 @(ViewData["ActivePage"] as string == "Messages" ? "active" : "")">
                            <a class="nav-link text-dark d-flex flex-column align-items-center" asp-area=""
                                asp-controller="Messages" asp-action="SendMessage">
                                <i class="bi bi-envelope" style="font-size: 24px;"></i>
                                <span>Tin nhắn</span>
                            </a>
                        </li>
                        <li class="nav-item mx-3">
                            <form asp-controller="User" asp-action="Logout" method="post"
                                class="d-flex flex-column align-items-center">
                                <button class="btn btn-link text-dark">
                                    <i class="bi bi-box-arrow-right" style="font-size: 24px;"></i>
                                    <span>Logout</span>
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </nav>

        }

    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
