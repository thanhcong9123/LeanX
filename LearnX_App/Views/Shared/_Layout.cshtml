<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LearnX_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LearnX_App.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>


<body>
    <header class="main-header">
        <!-- Top Navigation -->
        <nav class="top-nav">
            <div class="container">
                <div class="nav-content">
                    <!-- Logo Section -->
                    <div class="logo-section">
                        <div class="logo-container">
                            <div class="logo-icon">
                                <i class="fas fa-graduation-cap"></i>
                            </div>
                            <h2 class="brand-name">LearX</h2>
                        </div>
                        <div class="tagline">
                            <h3 class="tagline-text">Learn from the best</h3>
                            <div class="tagline-underline"></div>
                        </div>
                    </div>

                    <!-- User Profile (when authenticated) -->
                    
                    
                </div>
            </div>
        </nav>

        <!-- Main Navigation (when authenticated) -->
        @if (User.Identity.IsAuthenticated)
        {
            <nav class="main-nav">
                <div class="container">
                    <ul class="nav-menu">
                        <li class="nav-item mx-3 @(ViewData["ActivePage"] as string == "Index" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Course" asp-action="Index">
                                <div class="nav-icon">
                                    <i class="fas fa-book-open"></i>
                                </div>
                                <span class="nav-text">Khóa học</span>
                                <div class="nav-indicator"></div>
                            </a>
                        </li>
                        <li class="nav-item mx-3 @(ViewData["ActivePage"] as string == "AllExercise" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Exercise" asp-action="Index">
                                <div class="nav-icon">
                                    <i class="fas fa-pencil-alt"></i>
                                </div>
                                <span class="nav-text">Bài tập</span>
                                <div class="nav-indicator"></div>
                            </a>
                        </li>
                        <li class="nav-item mx-3 @(ViewData["ActivePage"] as string == "Ebook" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="EBook" asp-action="Index">
                                <div class="nav-icon">
                                    <i class="fas fa-book"></i>
                                </div>
                                <span class="nav-text">Sách điện tử</span>
                                <div class="nav-indicator"></div>
                            </a>
                        </li>
                        <li class="nav-item mx-3 @(ViewData["ActivePage"] as string == "Test" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Test" asp-action="Index">
                                <div class="nav-icon">
                                    <i class="fas fa-clipboard-check"></i>
                                </div>
                                <span class="nav-text">Bài kiểm tra</span>
                                <div class="nav-indicator"></div>
                            </a>
                        </li>
                        <li class="nav-item mx-3 @(ViewData["ActivePage"] as string == "Scores" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Scores" asp-action="Index">
                                <div class="nav-icon">
                                    <i class="fas fa-chart-line"></i>
                                </div>
                                <span class="nav-text">Sổ điểm</span>
                                <div class="nav-indicator"></div>
                            </a>
                        </li>
                        <li class="nav-item mx-3 @(ViewData["ActivePage"] as string == "Messages" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Messages" asp-action="Chat">
                                <div class="nav-icon">
                                    <i class="fas fa-comments"></i>
                                </div>
                                <span class="nav-text">Tin nhắn</span>
                           
                            </a>
                        </li>
                        <li class="nav-item mx-3 logout-item">
                            <form asp-controller="User" asp-action="Logout" method="post" class="logout-form">
                                <button class="logout-btn">
                                    <div class="nav-icon">
                                        <i class="fas fa-sign-out-alt"></i>
                                    </div>
                                    <span class="nav-text">Đăng xuất</span>
                                </button>
                            </form>
                        </li>
                    </ul>

                    <!-- Mobile Menu Toggle -->
                    <button class="mobile-menu-toggle" onclick="toggleMobileMenu()">
                        <span class="hamburger-line"></span>
                        <span class="hamburger-line"></span>
                        <span class="hamburger-line"></span>
                    </button>
                </div>
            </nav>

            <!-- Mobile Navigation Overlay -->
            <div class="mobile-nav-overlay" id="mobile-nav">
                <div class="mobile-nav-content">
                    <div class="mobile-nav-header">
                        <div class="mobile-logo">
                            <i class="fas fa-graduation-cap"></i>
                            <span>LearX</span>
                        </div>
                        <button class="mobile-nav-close" onclick="toggleMobileMenu()">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <ul class="mobile-nav-menu">
                        <li class="mobile-nav-item @(ViewData["ActivePage"] as string == "Index" ? "active" : "")">
                            <a class="mobile-nav-link" asp-area="" asp-controller="Course" asp-action="Index">
                                <i class="fas fa-book-open"></i>
                                <span>Khóa học</span>
                            </a>
                        </li>
                        <li class="mobile-nav-item @(ViewData["ActivePage"] as string == "AllExercise" ? "active" : "")">
                            <a class="mobile-nav-link" asp-area="" asp-controller="Exercise" asp-action="Index">
                                <i class="fas fa-pencil-alt"></i>
                                <span>Bài tập</span>
                            </a>
                        </li>
                        <li class="mobile-nav-item @(ViewData["ActivePage"] as string == "Ebook" ? "active" : "")">
                            <a class="mobile-nav-link" asp-area="" asp-controller="EBook" asp-action="Index">
                                <i class="fas fa-book"></i>
                                <span>Sách điện tử</span>
                            </a>
                        </li>
                        <li class="mobile-nav-item @(ViewData["ActivePage"] as string == "Test" ? "active" : "")">
                            <a class="mobile-nav-link" asp-area="" asp-controller="Test" asp-action="Index">
                                <i class="fas fa-clipboard-check"></i>
                                <span>Bài kiểm tra</span>
                            </a>
                        </li>
                        <li class="mobile-nav-item @(ViewData["ActivePage"] as string == "Scores" ? "active" : "")">
                            <a class="mobile-nav-link" asp-area="" asp-controller="Scores" asp-action="Index">
                                <i class="fas fa-chart-line"></i>
                                <span>Sổ điểm</span>
                            </a>
                        </li>
                        <li class="mobile-nav-item @(ViewData["ActivePage"] as string == "Messages" ? "active" : "")">
                            <a class="mobile-nav-link" asp-area="" asp-controller="Messages" asp-action="Chat">
                                <i class="fas fa-comments"></i>
                                <span>Tin nhắn</span>
                                <span class="mobile-badge">2</span>
                            </a>
                        </li>
                        <li class="mobile-nav-item">
                            <form asp-controller="User" asp-action="Logout" method="post" class="mobile-logout-form">
                                <button class="mobile-logout-btn" onclick="handleLogout()">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span>Đăng xuất</span>
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        }
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

    </footer>
    <!-- Thêm thư viện SignalR -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const mobileToggle = document.querySelector('.mobile-menu-toggle');
            const mobileNav = document.getElementById('mobile-nav');
            const mobileClose = document.querySelector('.mobile-nav-close');
            const hamburgerLines = document.querySelectorAll('.hamburger-line');

            function toggleMobileMenu() {
                mobileNav.classList.toggle('active');
                
                if (mobileNav.classList.contains('active')) {
                    hamburgerLines[0].style.transform = 'rotate(45deg) translate(5px, 5px)';
                    hamburgerLines[1].style.opacity = '0';
                    hamburgerLines[2].style.transform = 'rotate(-45deg) translate(7px, -6px)';
                } else {
                    hamburgerLines[0].style.transform = 'none';
                    hamburgerLines[1].style.opacity = '1';
                    hamburgerLines[2].style.transform = 'none';
                }
            }

            if (mobileToggle) {
                mobileToggle.addEventListener('click', toggleMobileMenu);
            }

            if (mobileClose) {
                mobileClose.addEventListener('click', toggleMobileMenu);
            }

            document.addEventListener('click', function(e) {
                if (mobileNav && mobileNav.classList.contains('active') && 
                    !mobileNav.contains(e.target) && 
                    !mobileToggle.contains(e.target)) {
                    toggleMobileMenu();
                }
            });

            const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
            mobileNavLinks.forEach(link => {
                link.addEventListener('click', function() {
                    // Remove active from all
                    document.querySelectorAll('.mobile-nav-item').forEach(item => {
                        item.classList.remove('active');
                    });
                    // Add active to current
                    this.closest('.mobile-nav-item').classList.add('active');
                    // Close menu
                    toggleMobileMenu();
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>