@using LearnX_ModelView.System.User
@model Login
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LearnX_App.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/auth/Login.css" />
    <title>Login</title>
</head>

<body>
    <section class="auth-section">
        <div class="bg-animation">
            <div class="floating-shape shape-1"></div>
            <div class="floating-shape shape-2"></div>
            <div class="floating-shape shape-3"></div>
            <div class="floating-shape shape-4"></div>
            <div class="floating-shape shape-5"></div>
        </div>
        <div class="forms-container">
            <div class="auth-form">
                <div class="header-form text-center mb-4">
                    <div class="logo d-flex align-items-center justify-content-center ">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <h3>Chào mừng trở lại!</h3>
                    <p>Đăng nhập để tiếp tục hành trình học tập</p>
                </div>
                <div class="form-body ">
                    <form asp-action="Login" class="">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["SuccessMessage"]
                            </div>
                        }
                        <div class="input-group mb-3">
                            <div class="input-box position-relative">
                                <input asp-for="UserName" type="text" id="loginUsername" name="username" required>
                                <label class="position-absolute " asp-for="UserName" for="loginUsername">Tên người dùng
                                    hoặc Email</label>
                                <i class="fas fa-user input-icon"></i>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-box position-relative">
                                <input asp-for="Password" type="password" id="loginPassword" name="password" required>
                                <label class="position-absolute " asp-for="Password" for="loginPassword">Mật
                                    khẩu</label>
                                <i class="fas fa-lock input-icon"></i>
                                <button type="button" class="password-toggle" onclick="togglePassword('loginPassword')">
                                    <i class="fas fa-eye "></i>
                                </button>
                            </div>
                        </div>
                        <div class="form-group form-check d-flex justify-content-between align-items-center">
                            <div>
                                <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="form2Example31"
                                    checked />
                                <label class="form-check-label" asp-for="RememberMe" for="form2Example31"> Remember me
                                </label>
                            </div>
                            <div>
                                <a href="#" class="forgot-password-link">Quên mật khẩu?</a>
                            </div>
                        </div>
                        <button class=" btn-gradient" id="login-submit" type="submit">
                            Đăng nhập
                        </button>
                        <div class="divider">
                            <span>Hoặc đăng nhập với</span>
                        </div>
                        <div class="social-login d-flex justify-content-center gap-3">
                            <button type="button" class="social-btn google-btn">
                                <i class="fab fa-google"></i>
                                <span>Google</span>
                            </button>
                            <button type="button" class="social-btn facebook-btn">
                                <i class="fab fa-facebook-f"></i>
                                <span>Facebook</span>
                            </button>
                        </div>

                        <div class="form-footer">
                            <p>Chưa có tài khoản? <a href="http://localhost:5184/User/Register" type="button"
                                    class="link-btn">Đăng ký ngay</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

</body>
<script>
    function togglePassword(fieldId) {
        const input = document.getElementById(fieldId);
        if (!input) return;

        // Tìm container và nút toggle/icon một cách an toàn
        const box = input.closest('.input-box');
        const btn = box ? box.querySelector('.password-toggle') : null;
        const icon = btn ? btn.querySelector('i') : null;

        if (input.type === 'password') {
            input.type = 'text';
            if (icon) {
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            }
        } else {
            input.type = 'password';
            if (icon) {
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

    }
</script>

</html>