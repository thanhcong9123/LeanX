@model LearnX_App.Models.CreateEssayExerciseViewModel

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-edit"></i> Tạo bài tập tự luận mới
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateEssayExercise" method="post" enctype="multipart/form-data">
                        <input asp-for="CourseId" type="hidden" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label fw-bold"></label>
                            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề bài tập tự luận" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="4" 
                                placeholder="Mô tả về bài tập, yêu cầu cần đạt được..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Instructions" class="form-label fw-bold"></label>
                            <textarea asp-for="Instructions" class="form-control" rows="3" 
                                placeholder="Hướng dẫn chi tiết cách làm bài, format yêu cầu..."></textarea>
                            <span asp-validation-for="Instructions" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="TimeLimit" class="form-label fw-bold"></label>
                                    <div class="input-group">
                                        <input asp-for="TimeLimit" type="number" class="form-control" min="0" 
                                            placeholder="Để trống nếu không giới hạn" />
                                        <span class="input-group-text">phút</span>
                                    </div>
                                    <span asp-validation-for="TimeLimit" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="MaxScore" class="form-label fw-bold"></label>
                                    <input asp-for="MaxScore" type="number" step="0.1" class="form-control" min="0" />
                                    <span asp-validation-for="MaxScore" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="AnswerKeyFile" class="form-label fw-bold"></label>
                            <input asp-for="AnswerKeyFile" type="file" class="form-control" 
                                accept=".pdf,.doc,.docx,.txt" />
                            <small class="form-text text-muted">
                                Upload file đáp án chuẩn (tùy chọn). Hỗ trợ: PDF, Word, Text
                            </small>
                            <span asp-validation-for="AnswerKeyFile" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle"></i> Lưu ý về bài tập tự luận:</h6>
                            <ul class="mb-0">
                                <li>Học sinh sẽ nhập đáp án dạng văn bản và có thể đính kèm file</li>
                                <li>Giáo viên cần chấm điểm và nhận xét thủ công</li>
                                <li>File đáp án chuẩn sẽ giúp việc chấm điểm thuận tiện hơn</li>
                            </ul>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Exercise" asp-action="Details" asp-route-id="@Model.CourseId" 
                                class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-plus"></i> Tạo bài tập tự luận
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Preview file name when selected
        document.querySelector('input[type="file"]').addEventListener('change', function(e) {
            const fileName = e.target.files[0]?.name || 'Chưa chọn file';
            const small = e.target.parentElement.querySelector('small');
            if (e.target.files[0]) {
                small.innerHTML = `<strong>File đã chọn:</strong> ${fileName}`;
                small.className = 'form-text text-success';
            } else {
                small.innerHTML = 'Upload file đáp án chuẩn (tùy chọn). Hỗ trợ: PDF, Word, Text';
                small.className = 'form-text text-muted';
            }
        });
    </script>
}